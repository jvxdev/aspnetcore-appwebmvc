@using Integro.App.Extensions
@model Integro.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Excluir -" + Model.Nome;
}

<h1 class="mt-4 display-4 text-center">@ViewData["Title"]</h1>

<p class="text-center my-3">Você tem certeza que deseja excluir este fornecedor?</p>

<div>
    <h4>Remover</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-10">
            @this.FormataDocumento(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <div class="text-right mb-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            <a asp-action="Delete" class="btn btn-danger">Excluir</a>
        </form>
    </div>
</div>

<partial name="_DetalhesEndereco" />