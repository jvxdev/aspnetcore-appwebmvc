@model Integro.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes - " + Model.Nome;
}

<h1 class="my-5 display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <hr />
    <div class="row">
        <div>
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 400px; height: 428px" />
        </div>
        <div class="col-md-6">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.FornecedorId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd>
                    @Model.Valor.ToString("C")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-right">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
</div>
