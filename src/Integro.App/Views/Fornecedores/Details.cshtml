@using Integro.App.Extensions
@model Integro.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Detalhes - " + Model.Nome;
}

<h1 class="my-5 display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.FormataDocumento(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>

<div class="text-right mb-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
</div>

<partial name="_DetalhesEndereco" />
