@model Integro.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Novo fornecedor";
}

<h1 class="my-5 display-4 text-center">@ViewData["Title"]</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Documento" class="control-label"></label>
                        <input asp-for="Documento" class="form-control" />
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="TipoFornecedor" class="control-label"></label><br />
                        <input type="radio" value="1" asp-for="TipoFornecedor" /> Pessoa Física
                        <input type="radio" value="2" asp-for="TipoFornecedor" class="ml-3"/> Pessoa Jurídica
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>

                    <h4>Endereço</h4>
                    <hr />

                    <partial name="_Endereco" />

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
