@model Integro.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editar - " + Model.Nome;
}

<h1 class="my-5 display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Documento" class="control-label"></label>
                        <input asp-for="Documento" class="form-control" />
                        <span asp-validation-for="Documento" class="text-danger"></span>
                    </div>
                </div>
                
                <label asp-for="TipoFornecedor"></label>
                <div>
                    <input type="radio" value="1" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 1)" /> Pessoa Física
                    <input type="radio" value="2" asp-for="TipoFornecedor" checked="@(Model.TipoFornecedor == 2)" class="ml-2"/> Pessoa Jurídica
                </div>
                <div>
                    &nbsp;
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>

                <div class="form-group text-right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <hr />
    <h4 class="display-4 my-4">Endereço</h4>
</div>

<div>
    <partial name="_DetalhesEndereco" />
</div>

<div>
    <hr />
    <h4 class="display-4 my-4">Produtos</h4>
</div>

<div>
    <partial name="../Produtos/_ListaProdutos" model="@Model.Produtos" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
