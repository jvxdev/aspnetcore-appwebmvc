@model Integro.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar - " + Model.Nome;
}

<h1 class="my-4 display-4 text-center">@ViewData["Title"]</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label><br/>
                    <label><b>@Model.Fornecedor.Nome</b></label>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Imagem atual</label><br/>
                    <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 100px; height: 100px;" />
                </div>
                <div class="form-group">
                    <label asp-for="ImagemUpload" class="control-label"></label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload" />
                        <label data-browse="Procurar" style="width: 525px" class="custom-file-label" for="ImagemUpload"></label>
                        <label style="display: none" id="img_nome"></label>
                    </div>
                    
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
                <div class="form-group">
                    <a class="btn btn-secondary" href="javascript:window.history.back();">Voltar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $("#ImagemUpload").change(function () {
        $("#img_nome").text(this.files[0].name);
        $("#img_nome")[0].style.display = 'block';
    });
</script>
}
